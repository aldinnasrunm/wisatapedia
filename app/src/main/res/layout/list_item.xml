<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="18dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvItemTumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/ivTumbnail"
                            android:layout_width="114dp"
                            android:layout_height="114dp"
                            />
                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/tvItemName"
                    style="@style/custom.text.nomal_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="23dp"
                    tools:text="Name"
                    app:layout_constraintStart_toEndOf="@+id/cvItemTumbnail"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_baseline_location_on_24"
                    app:layout_constraintStart_toEndOf="@+id/cvItemTumbnail"
                    app:layout_constraintTop_toBottomOf="@+id/tvItemName" />

                <TextView
                    android:id="@+id/tvItemLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/ivIcon"
                    app:layout_constraintStart_toEndOf="@+id/ivIcon"
                    app:layout_constraintTop_toTopOf="@+id/ivIcon"
                    tools:text="Surakarta" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/cvItemTumbnail"
                    app:layout_constraintTop_toBottomOf="@+id/ivIcon"
                    tools:text="(4)" />

                <RatingBar
                    android:id="@+id/rbarItem"
                    style="@style/ratingBarYellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="1"
                    app:layout_constraintBottom_toBottomOf="@+id/tvRating"
                    app:layout_constraintStart_toEndOf="@+id/tvRating"
                    app:layout_constraintTop_toTopOf="@+id/tvRating" />

<!--                <TextView-->
<!--                    android:id="@+id/tvListData"-->
<!--                    android:layout_gravity="center"-->
<!--                    style="@style/custom.text.nomal_medium1"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    tools:text="abcd" />  -->
        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>