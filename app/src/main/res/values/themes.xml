<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wisatapedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/tosca</item>
        <item name="colorPrimaryVariant">@color/tosca</item>
        <item name="colorOnPrimary">@color/light_tosca3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Text input style round  -->
    <style name="TextInputRound" parent="Widget.Design.TextInputLayout">
        <item name="borderRound">20dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>

    </style>

    <!-- Button    -->
    <style name="custom.main.button" parent="Widget.MaterialComponents.Button">
        <item name="background">@drawable/form</item>
        
    
        

    </style>

    <!-- Custom Button Setting -->
<!--    <style name="custom.setting."-->
<!--    Text Big Bold-->
    <style name="custom.text.big" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
<!--    Text normal medium-->
    <style name="custom.text.nomal_medium" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <!--    Text normal medium-->
    <style name="custom.text.nomal_mediumL" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

<!--teks Big white Amiri-->
    <style name="custom.text.amiri_bold" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/amiri_bold</item>
        <item name="lineHeight">55sp</item>
