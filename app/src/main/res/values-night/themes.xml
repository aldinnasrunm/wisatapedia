<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wisatapedia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--    Text Big Bold-->
    <style name="custom.text.big" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/light_tosca3</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <!--    Text normal medium-->
    <style name="custom.text.nomal_medium" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/light_tosca3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
</resources>